<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_itemView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/borderPaddingBig"
    android:layout_marginRight="@dimen/borderPaddingBig"
    android:layout_marginTop="@dimen/borderPaddingBig"
    android:background="@drawable/shape_round_corner_gray_e8"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.duodian.admore.main.home.resourcevoucher.VoucherView
            android:id="@+id/voucherView"
            android:layout_width="match_parent"
            android:layout_height="128dp" />

        <TextView
            android:id="@+id/textView_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/borderPaddingSmall"
            android:alpha=".1"
            android:textColor="@android:color/white"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_resourceNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/borderPaddingBig"
            android:layout_marginRight="@dimen/borderPaddingSmall"
            android:layout_marginTop="@dimen/borderPaddingBig"
            android:textColor="@android:color/white"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_unit_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView_resourceNumber"
            android:layout_toRightOf="@+id/textView_resourceNumber"
            android:text="@string/unit_num"
            android:textColor="@android:color/white"
            android:textSize="10sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_resourceNumber"
            android:layout_marginLeft="@dimen/borderPaddingBig"
            android:layout_marginRight="@dimen/borderPaddingBig"
            android:layout_marginTop="@dimen/borderPaddingBig"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_voucherNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_round_2_black_translucent"
                android:paddingBottom="4dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="4dp"
                android:textColor="@color/translucent_white"
                android:textSize="13sp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1.0" />

            <TextView
                android:id="@+id/textView_endDate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/translucent_white"
                android:textSize="10sp" />
        </LinearLayout>

        <com.duodian.admore.customview.LabelView
            android:id="@+id/labelView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView_active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/borderPaddingMiddle"
        android:paddingLeft="@dimen/borderPaddingBig"
        android:paddingRight="@dimen/borderPaddingBig"
        android:paddingTop="@dimen/borderPaddingMiddle"
        android:text="@string/clickToExchange"
        android:textColor="@color/grayText1"
        android:textSize="10sp" />


</LinearLayout>