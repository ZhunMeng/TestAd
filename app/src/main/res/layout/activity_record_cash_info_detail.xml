<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.duodian.admore.transaction.record.cash.RecordCashInfoDetailActivity">

    <include layout="@layout/layout_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/borderPaddingBig"
        android:paddingRight="@dimen/borderPaddingBig">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/flowNo"
            android:textColor="@android:color/black"
            android:textSize="@dimen/titleSizeSmall" />

        <TextView
            android:id="@+id/textView_flowNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@android:color/transparent"
            android:gravity="end"
            android:singleLine="true"
            android:textSize="@dimen/titleSizeSmall" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginLeft="@dimen/borderPaddingBig"
        android:layout_marginStart="@dimen/borderPaddingBig"
        android:background="@color/grayF2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/borderPaddingBig"
        android:paddingRight="@dimen/borderPaddingBig">

        <TextView
            android:id="@+id/textView_incomeOrExpend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/titleSizeSmall" />

        <TextView
            android:id="@+id/textView_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@android:color/transparent"
            android:gravity="end"
            android:singleLine="true"
            android:textSize="@dimen/titleSizeSmall"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginLeft="@dimen/borderPaddingBig"
        android:layout_marginStart="@dimen/borderPaddingBig"
        android:background="@color/grayF2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/borderPaddingBig"
        android:paddingRight="@dimen/borderPaddingBig">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/balance"
            android:textColor="@android:color/black"
            android:textSize="@dimen/titleSizeSmall" />

        <TextView
            android:id="@+id/textView_balance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@android:color/transparent"
            android:gravity="end"
            android:singleLine="true"
            android:textSize="@dimen/titleSizeSmall" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginLeft="@dimen/borderPaddingBig"
        android:layout_marginStart="@dimen/borderPaddingBig"
        android:background="@color/grayF2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/borderPaddingBig"
        android:paddingRight="@dimen/borderPaddingBig">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remark"
            android:textColor="@android:color/black"
            android:textSize="@dimen/titleSizeSmall" />

        <TextView
            android:id="@+id/textView_remark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@android:color/transparent"
            android:gravity="end"
            android:singleLine="true"
            android:textSize="@dimen/titleSizeSmall" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginLeft="@dimen/borderPaddingBig"
        android:layout_marginStart="@dimen/borderPaddingBig"
        android:background="@color/grayF2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/borderPaddingBig"
        android:paddingRight="@dimen/borderPaddingBig">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:textColor="@android:color/black"
            android:textSize="@dimen/titleSizeSmall" />

        <TextView
            android:id="@+id/textView_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@android:color/transparent"
            android:gravity="end"
            android:singleLine="true"
            android:textSize="@dimen/titleSizeSmall" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginLeft="@dimen/borderPaddingBig"
        android:layout_marginStart="@dimen/borderPaddingBig"
        android:background="@color/grayF2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/borderPaddingBig"
        android:paddingRight="@dimen/borderPaddingBig">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/typeDesc"
            android:textColor="@android:color/black"
            android:textSize="@dimen/titleSizeSmall" />

        <TextView
            android:id="@+id/textView_typeDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@android:color/transparent"
            android:gravity="end"
            android:singleLine="true"
            android:textSize="@dimen/titleSizeSmall" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/grayF2" />
</LinearLayout>
