<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.duodian.admore.account.AccountManageActivity">

    <include layout="@layout/layout_toolbar" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/borderPaddingBig"
                android:paddingRight="@dimen/borderPaddingBig">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="@string/loginPassword"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/titleSizeSmall" />

                <TextView
                    android:id="@+id/textView_statusDesc_loginPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/borderPadding"
                    android:layout_marginRight="@dimen/borderPadding"
                    android:textSize="@dimen/titleSizeSmall" />

                <TextView
                    android:id="@+id/textView_set_loginPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayA3"
                    android:textSize="@dimen/titleSizeSmall" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginLeft="@dimen/borderPaddingBig"
                android:layout_marginStart="@dimen/borderPaddingBig"
                android:background="@color/grayF2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/borderPaddingBig"
                android:paddingRight="@dimen/borderPaddingBig">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="@string/securityQuestion"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/titleSizeSmall" />

                <TextView
                    android:id="@+id/textView_statusDesc_securityQuestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/borderPadding"
                    android:layout_marginRight="@dimen/borderPadding"
                    android:textSize="@dimen/titleSizeSmall" />

                <TextView
                    android:id="@+id/textView_set_securityQuestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayA3"
                    android:textSize="@dimen/titleSizeSmall" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginLeft="@dimen/borderPaddingBig"
                android:layout_marginStart="@dimen/borderPaddingBig"
                android:background="@color/grayF2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/borderPaddingBig"
                android:paddingRight="@dimen/borderPaddingBig">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="@string/phoneBind"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/titleSizeSmall" />

                <TextView
                    android:id="@+id/textView_statusDesc_phoneBind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/borderPadding"
                    android:layout_marginRight="@dimen/borderPadding"
                    android:textSize="@dimen/titleSizeSmall" />

                <TextView
                    android:id="@+id/textView_set_phoneBind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayA3"
                    android:textSize="@dimen/titleSizeSmall" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginLeft="@dimen/borderPaddingBig"
                android:layout_marginStart="@dimen/borderPaddingBig"
                android:background="@color/grayF2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/borderPaddingBig"
                android:paddingRight="@dimen/borderPaddingBig">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="@string/WXBind"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/titleSizeSmall" />

                <TextView
                    android:id="@+id/textView_statusDesc_WXBind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/borderPadding"
                    android:layout_marginRight="@dimen/borderPadding"
                    android:textSize="@dimen/titleSizeSmall" />

                <TextView
                    android:id="@+id/textView_set_WXBind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayA3"
                    android:textSize="@dimen/titleSizeSmall" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/grayF2" />
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
