<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.duodian.admore.invoice.address.edit.AddressEditActivity">

    <include layout="@layout/layout_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/borderPaddingBig"
        android:paddingRight="@dimen/borderPaddingBig">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nickName"
            android:textColor="@android:color/black"
            android:textSize="@dimen/titleSizeSmall" />

        <EditText
            android:id="@+id/editText_nickName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@android:color/transparent"
            android:inputType="text"
            android:paddingLeft="@dimen/borderPadding"
            android:paddingRight="@dimen/borderPadding"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/titleSizeSmall" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginLeft="@dimen/borderPaddingBig"
        android:layout_marginStart="@dimen/borderPaddingBig"
        android:background="@color/grayF2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/borderPaddingBig"
        android:paddingRight="@dimen/borderPaddingBig">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contactPhone"
            android:textColor="@android:color/black"
            android:textSize="@dimen/titleSizeSmall" />

        <EditText
            android:id="@+id/editText_contactPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@android:color/transparent"
            android:inputType="phone"
            android:paddingLeft="@dimen/borderPadding"
            android:paddingRight="@dimen/borderPadding"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/titleSizeSmall" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginLeft="@dimen/borderPaddingBig"
        android:layout_marginStart="@dimen/borderPaddingBig"
        android:background="@color/grayF2" />

    <LinearLayout
        android:id="@+id/linearLayout_area"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/borderPaddingBig"
        android:paddingRight="@dimen/borderPaddingBig">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="@string/provinceCity"
            android:textColor="@android:color/black"
            android:textSize="@dimen/titleSizeSmall" />

        <TextView
            android:id="@+id/textView_province"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pleaseSelect"
            android:textColor="@android:color/black"
            android:textSize="@dimen/titleSizeSmall" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/ic_navigate_next_black_24dp"
            android:tint="@color/grayArrow" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginLeft="@dimen/borderPaddingBig"
        android:layout_marginStart="@dimen/borderPaddingBig"
        android:background="@color/grayF2" />

    <LinearLayout
        android:id="@+id/linearLayout_street"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/borderPaddingBig"
        android:paddingRight="@dimen/borderPaddingBig"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="@string/street"
            android:textColor="@android:color/black"
            android:textSize="@dimen/titleSizeSmall" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pleaseSelect"
            android:textSize="@dimen/titleSizeSmall" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/ic_navigate_next_black_24dp"
            android:tint="@color/grayIcon" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginLeft="@dimen/borderPaddingBig"
        android:layout_marginStart="@dimen/borderPaddingBig"
        android:background="@color/grayF2"
        android:visibility="gone" />

    <EditText
        android:id="@+id/editText_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/borderPaddingBig"
        android:background="@android:color/transparent"
        android:gravity="top"
        android:hint="@string/streetHint"
        android:imeOptions="actionDone"
        android:lines="5"
        android:maxLines="5"
        android:textColor="@android:color/black"
        android:textSize="@dimen/titleSizeSmall" />

    <View
        android:layout_width="match_parent"
        android:layout_height="18sp"
        android:background="@color/grayF2" />

    <LinearLayout
        android:id="@+id/linearLayout_setDefault"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/borderPaddingBig"
        android:paddingRight="@dimen/borderPaddingBig">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="@string/setDefault"
            android:textColor="@android:color/black"
            android:textSize="@dimen/titleSizeSmall" />


        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch_setDefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:background="@color/grayF2" />

</LinearLayout>