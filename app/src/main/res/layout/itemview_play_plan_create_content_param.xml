<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_itemView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/borderPaddingSmall"
        android:paddingLeft="@dimen/borderPaddingBig"
        android:paddingRight="@dimen/borderPaddingBig"
        android:paddingTop="@dimen/borderPaddingSmall">

        <TextView
            android:id="@+id/textView_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/titleSizeSmall"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_longTerm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/borderPaddingSmall"
            android:background="@drawable/shape_round_corner_gray_e4"
            android:paddingBottom="@dimen/borderPaddingMini"
            android:paddingLeft="@dimen/borderPaddingSmall"
            android:paddingRight="@dimen/borderPaddingSmall"
            android:paddingTop="@dimen/borderPaddingMini"
            android:text="@string/longTerm"
            android:textSize="11sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1.0" />

        <TextView
            android:id="@+id/textView_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:paddingBottom="@dimen/borderPaddingMini"
            android:paddingLeft="@dimen/borderPaddingSmall"
            android:paddingRight="@dimen/borderPaddingSmall"
            android:paddingTop="@dimen/borderPaddingMini"
            android:text="@string/update" />

        <TextView
            android:id="@+id/textView_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:paddingBottom="@dimen/borderPaddingMini"
            android:paddingLeft="@dimen/borderPaddingSmall"
            android:paddingRight="@dimen/borderPaddingSmall"
            android:paddingTop="@dimen/borderPaddingMini"
            android:text="@string/delete"
            android:textColor="@color/colorRed" />
    </LinearLayout>


    <TextView
        android:id="@+id/textView_spreadNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/borderPaddingBig"
        android:paddingRight="@dimen/borderPaddingBig"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/textView_spreadTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/borderPaddingSmall"
        android:layout_marginTop="@dimen/borderPaddingSmall"
        android:paddingLeft="@dimen/borderPaddingBig"
        android:paddingRight="@dimen/borderPaddingBig"
        android:textSize="11sp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1sp"
        android:background="@color/grayF2" />
</LinearLayout>