<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editText_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:hint="@string/inputPassword"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingLeft="@dimen/borderPaddingBig"
        android:paddingStart="@dimen/borderPaddingBig"
        android:singleLine="true"
        android:textSize="@dimen/subheadingSize" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginLeft="@dimen/borderPaddingBig"
        android:layout_marginStart="@dimen/borderPaddingBig"
        android:background="@color/grayF2" />

    <EditText
        android:id="@+id/editText_password_confirm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:hint="@string/confirmPassword"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingLeft="@dimen/borderPaddingBig"
        android:paddingStart="@dimen/borderPaddingBig"
        android:singleLine="true"
        android:textSize="@dimen/subheadingSize" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/grayF2" />


</LinearLayout>
