<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_person"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginLeft="@dimen/borderPaddingBig"
        android:layout_marginRight="@dimen/borderPaddingBig"
        android:layout_marginTop="@dimen/borderPaddingBig"
        android:background="@drawable/shape_round_corner_gray_light"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="@dimen/borderPaddingSmall"
            android:layout_marginRight="@dimen/borderPaddingSmall"
            android:src="@drawable/ic_perm_identity_black_24dp"
            android:tint="@color/grayA3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/person"
                android:textColor="@android:color/black"
                android:textSize="@dimen/titleSize"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/borderPaddingMini"
                android:text="@string/realNameAuthentication"
                android:textColor="@color/grayA3"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_enterprise"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginLeft="@dimen/borderPaddingBig"
        android:layout_marginRight="@dimen/borderPaddingBig"
        android:layout_marginTop="@dimen/borderPaddingBig"
        android:background="@drawable/shape_round_corner_gray_light"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="@dimen/borderPaddingSmall"
            android:layout_marginRight="@dimen/borderPaddingSmall"
            android:padding="2dp"
            android:src="@drawable/ic_account_balance_black_24dp"
            android:tint="@color/grayA3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enterprise"
                android:textColor="@android:color/black"
                android:textSize="@dimen/titleSize"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/borderPaddingMini"
                android:text="@string/realNameAuthentication"
                android:textColor="@color/grayA3"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>