<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.duodian.admore.order.detail.OrderDetailActivity">

    <include layout="@layout/layout_toolbar" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/borderPaddingBig"
                android:paddingRight="@dimen/borderPaddingBig">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/product"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/titleSizeSmall" />

                <TextView
                    android:id="@+id/textView_product"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@android:color/transparent"
                    android:gravity="end"
                    android:singleLine="true"
                    android:textSize="@dimen/titleSizeSmall" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginLeft="@dimen/borderPaddingBig"
                android:layout_marginStart="@dimen/borderPaddingBig"
                android:background="@color/grayF2" />

            <TextView
                android:id="@+id/textView_detail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="end|center_vertical"
                android:paddingLeft="@dimen/borderPadding"
                android:paddingRight="@dimen/borderPadding"
                android:singleLine="true"
                android:textSize="@dimen/titleSizeSmall" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginLeft="@dimen/borderPaddingBig"
                android:layout_marginStart="@dimen/borderPaddingBig"
                android:background="@color/grayF2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/borderPaddingBig"
                android:paddingRight="@dimen/borderPaddingBig">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/productCode"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/titleSizeSmall" />

                <TextView
                    android:id="@+id/textView_productCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@android:color/transparent"
                    android:gravity="end"
                    android:singleLine="true"
                    android:textSize="@dimen/titleSizeSmall" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginLeft="@dimen/borderPaddingBig"
                android:layout_marginStart="@dimen/borderPaddingBig"
                android:background="@color/grayF2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/borderPaddingBig"
                android:paddingRight="@dimen/borderPaddingBig">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/totalStr"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/titleSizeSmall" />

                <TextView
                    android:id="@+id/textView_totalStr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@android:color/transparent"
                    android:gravity="end"
                    android:singleLine="true"
                    android:textSize="@dimen/titleSizeSmall" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginLeft="@dimen/borderPaddingBig"
                android:layout_marginStart="@dimen/borderPaddingBig"
                android:background="@color/grayF2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/borderPaddingBig"
                android:paddingRight="@dimen/borderPaddingBig">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/orderTypeDesc"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/titleSizeSmall" />

                <TextView
                    android:id="@+id/textView_orderTypeDesc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@android:color/transparent"
                    android:gravity="end"
                    android:singleLine="true"
                    android:textSize="@dimen/titleSizeSmall" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginLeft="@dimen/borderPaddingBig"
                android:layout_marginStart="@dimen/borderPaddingBig"
                android:background="@color/grayF2" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/borderPaddingBig"
                android:paddingRight="@dimen/borderPaddingBig">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/productClsDesc"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/titleSizeSmall" />

                <TextView
                    android:id="@+id/textView_productClsDesc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@android:color/transparent"
                    android:gravity="end"
                    android:singleLine="true"
                    android:textSize="@dimen/titleSizeSmall" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginLeft="@dimen/borderPaddingBig"
                android:layout_marginStart="@dimen/borderPaddingBig"
                android:background="@color/grayF2" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/borderPaddingBig"
                android:paddingRight="@dimen/borderPaddingBig">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/productSubClsDesc"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/titleSizeSmall" />

                <TextView
                    android:id="@+id/textView_productSubClsDesc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@android:color/transparent"
                    android:gravity="end"
                    android:singleLine="true"
                    android:textSize="@dimen/titleSizeSmall" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginLeft="@dimen/borderPaddingBig"
                android:layout_marginStart="@dimen/borderPaddingBig"
                android:background="@color/grayF2" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/borderPaddingBig"
                android:paddingRight="@dimen/borderPaddingBig">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cdateTime_"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/titleSizeSmall" />

                <TextView
                    android:id="@+id/textView_cdate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@android:color/transparent"
                    android:gravity="end"
                    android:singleLine="true"
                    android:textSize="@dimen/titleSizeSmall" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginLeft="@dimen/borderPaddingBig"
                android:layout_marginStart="@dimen/borderPaddingBig"
                android:background="@color/grayF2" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/borderPaddingBig"
                android:paddingRight="@dimen/borderPaddingBig">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/payDate"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/titleSizeSmall" />

                <TextView
                    android:id="@+id/textView_payDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@android:color/transparent"
                    android:gravity="end"
                    android:singleLine="true"
                    android:textSize="@dimen/titleSizeSmall" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/grayF2" />


        </LinearLayout>

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
